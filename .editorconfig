root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{ml,mli}]
indent_style = space
indent_size = 2
tab_width = 2

[*.{opam,dune,install,sexp,conf,in}]
indent_style = space
indent_size = 4

[*.{md}]
indent_style = tab
trim_trailing_whitespace = true

[*.{nix}]
indent_style = space
indent_size = 2
insert_final_newline = false
trim_trailing_whitespace = true
